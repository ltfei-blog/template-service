{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./packages/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules/**/*"]
}
